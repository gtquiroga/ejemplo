<p id="notice"><%= notice %></p>

<h1>Publicaciones</h1>
<%= form_tag(publicacions_path, method: :get) do %>
  Publicacion <%= text_field_tag :search, params[:search]%>
  <%= submit_tag 'Buscar', name: nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Ciudad</th>
      <th>Tipo</th>
      <th>Texto</th>
      <th>Autor</th>
      <th>Fecha</th>
      <th>Puntaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publicacions.each do |publicacion| %>
      <tr>
        <td><%= publicacion.titulo %></td>
        <td><%= publicacion.ciudad %></td>
        <td><%= publicacion.tipo %></td>
        <td><%= publicacion.texto %></td>
        <td><%= publicacion.autor %></td>
        <td><%= publicacion.fecha %></td>
        <td><%= publicacion.puntaje %></td>
        <td><%= link_to 'Ver', publicacion %></td>
        <td><%= link_to 'Editar', edit_publicacion_path(publicacion) %></td>
        <td><%= link_to 'Eliminar', publicacion, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Publicacion', new_publicacion_path %>
