    <%= form.select :ciudad, Ciudad.all.collect{|p| p.nombre}, id: :publicacion_ciudad %>
  </div>

  <div class="field">
    <%= form.label :tipo %>
    <%= form.text_field :tipo, id: :publicacion_tipo %>
  </div>

  <div class="field">
    <%= form.label :texto %>
    <%= form.text_area :texto, id: :publicacion_texto %>
  </div>

  <div class="field">
    <%= form.label :autor %>
    <%= form.text_field :autor, id: :publicacion_autor %>
  </div>

  <div class="field">
    <%= form.label :fecha %>
    <%= form.date_select :fecha, id: :publicacion_fecha %>
  </div>

  <div class="field">
    <%= form.label :puntaje %>
    <%= form.number_field :puntaje, id: :publicacion_puntaje %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
