<%= form_with(model: artist, local: true) do |form| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--Una seccion del form-->
  <div class="field">
    <!--Lo que sale arriba del espacio donde escriben en esta seccion-->
    <%= form.label :name %> 
    <!--El espacio donde escriben, checkean, suben archivos, etc...
        Acepta opciones. Se le puede dar un id para poder referenciarlo
        en el controlador (en los parametros).-->
    <%= form.text_field :name, id: :artist_name %>
  </div>

  <div class="field">
    <%= form.label :birth_year %>
    <%= form.number_field :birth_year, id: :artist_birth_year %>
  </div>

  <div class="field">
    <%= form.label :first_album_year %>
    <%= form.number_field :first_album_year, id: :artist_first_album_year %>
  </div>

  <div class="action">
    <%= form.submit %>
  </div>
<% end %>
