<p id="notice"><%= notice %></p>

<h1>Ciudades</h1>
<%= form_tag(ciudads_path, method: :get) do %>
  Ciudad <%= text_field_tag :search, params[:search]%>
  <%= submit_tag 'Buscar', name: nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Pais</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ciudads.each do |ciudad| %>
      <tr>
        <td><%= ciudad.nombre %></td>
        <td><%= ciudad.descripcion %></td>
        <td><%= ciudad.pais %></td>
        <td><%= link_to 'Ver', ciudad %></td>
        <td><%= link_to 'Editar', edit_ciudad_path(ciudad) %></td>
        <td><%= link_to 'Eliminar', ciudad, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Ciudad', new_ciudad_path %>
