<p id="notice"><%= notice %></p>

<h1>Paises</h1>
<%= form_tag(pais_path, method: :get) do %>
  Pais <%= text_field_tag :search, params[:search]%>
  <%= submit_tag 'Buscar', name: nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Suscriptores</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pais.each do |pai| %>
      <tr>
        <td><%= pai.nombre %></td>
        <td><%= pai.descripcion %></td>
        <td><%= pai.suscriptores %></td>
        <td><%= link_to 'Ver', pai %></td>
        <td><%= link_to 'Editar', edit_pai_path(pai) %></td>
        <td><%= link_to 'Eliminar', pai, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Pais', new_pai_path %>
